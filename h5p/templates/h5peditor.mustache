{{!
    @template core_h5p/h5peditor

    Displays the H5P Editor form.

    Context variables required for this template:
    * id: int - the id of the content to edit.
    * h5plibrary: string - the library name of the content to create.
    * h5pparams: string - json encodend content params
    * actionurl: string - the action URL

    Example context (json):
    {
        "id": 3,
        "h5library": "H5P.Blanks 1.0",
        "h5pparams": {
            "imageSlides": [
                {
                    "params": {
                        "image": {
                            "params": {
                                "contentName": "Image",
                                "file": {
                                    "path": "images\/file-5e5d2510966fb.jpg#tmp",
                                    "mime": "image\/jpeg",
                                    "copyright": {
                                        "license": "U"
                                    },
                                    "width": 253,
                                    "height":237
                                }
                            },
                            "library": "H5P.Image 1.0",
                            "subContentId": "70dcbedd-e3b8-4c94-8099-2529258a49ef",
                            "metadata": {
                                "contentType": "Image"
                            }
                        }
                    },
                    "library": "H5P.ImageSlide 1.0",
                    "subContentId": "c053f9d0-ed9e-4a50-b347-4b54b7847955",
                    "metadata": {
                        "contentType": "Image Slide",
                        "license": "U",
                        "title": "Untitled Image Slide",
                        "authors": [],
                        "changes": [],
                        "extraTitle":"Untitled Image Slide"
                    }
                }
            ],
            "aspectRatioMode": "auto",
            "aspectRatio": {
                "aspectWidth": 4,
                "aspectHeight": 3
            },
            "a11y": {
                "nextSlide": "Next Image",
                "prevSlide": "Previous Image",
                "gotoSlide": "Go to image %slide"
            }
        },
        "actionurl": "https://domain.example/h5p/editor.php"
    }
}}
<div class="h5p-editor-wrapper">
    <div class="h5p-editor">
        {{> core/loading }}
    </div>
</div>
<div class="h5p-editor-upload"></div>
{{#js}}
    require(['jquery'], function($) {
        var $editor = $('.h5p-editor');
        var mformId = $editor.closest("form").attr('id');

        // Cancel validation and submission of form if clicking cancel button
        var cancelSubmitCallback = function($button) {
            return $button.is('[name="cancel"]');
        };

        $('input[name="h5paction"]').val("create");

        H5PEditor.init(
            $('#' + mformId),
            $('input[name="h5paction"]'),
            $('.h5p-editor-upload'),
            $('.h5p-editor-wrapper'),
            $editor,
            $('input[name="h5plibrary"]'),
            $('input[name="h5pparams"]'),
            '',
            $('input[name="name"]'),
            cancelSubmitCallback
        );
    });
{{/js}}