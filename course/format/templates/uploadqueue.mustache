{{!
    @template core_courseformat/uploadqueue

    Displays the complete course format.

    Example context (json):
    {
        "filename": "Example.pdf",
        "percent": "50",
        "id": "1",
    }
}}
<div class="uploadqueue d-flex align-items-center p-2" data-for="uploaditem" data-id="{{id}}">
    <div class="p-2 uploadname"> {{filename}} </div>
    <div class="p-2 progressbar">
        <progress value="{{percent}}" max="100"></progress>
    </div>
</div>
