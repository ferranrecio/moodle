{{!
    @template tool_componentlibrary/activity-item

    Displays a course module instance inside a course section.

    Example context (json):
    {
        "activityname": "Hello kitty forum",
        "modname": "Forum",
        "hasname": "true",
        "hasurl": "true",
        "hasdescription": "true",
        "editing": "false",
        "menuitems": [
            {
                "name": "Add activity below",
                "action": "addbelow",
                "icon": "<i class=\"icon fa fa-plus\"></i>"
            },
            {
                "name": "Move to",
                "action": "move",
                "icon": "<i class=\"icon fa fa-chevron-right\"></i>"
            },
            {
                "name": "Delete",
                "action": "delete",
                "icon": "<i class=\"icon fa fa-trash\"></i>"
            },
            {
                "name": "Settings",
                "action": "settings",
                "icon": "<i class=\"icon fa fa-cog\"></i>"
            }
        ],
        "icon": "http://placekitten.com/50/50",
        "afterlink": "<span class=\"badge badge-pill badge-secondary\">30 unread messages</span>",
        "altcontent": "Suspendisse condimentum non ipsum ut ultrices. Praesent in ipsum ac ex rutrum varius gravida quis est. Vestibulum elit ante, vestibulum vel varius non, congue in velit. Vivamus posuere efficitur magna, in faucibus lacus bibendum non. Nullam non tempus tortor.",
        "activityinfo": {
            "activityname": "Course announcements",
            "hascompletion": true,
            "uservisible": true,
            "hasdates": true,
            "isautomatic": true,
            "istrackeduser": true,
            "showmanualcompletion": true,
            "activitydates": [
                {
                    "label": "Opens:",
                    "datestring": "6 April 2021, 6:46 PM"
                }
            ],
            "completiondetails": [
                {
                    "statuscomplete": 1,
                    "description": "Viewed"
                },
                {
                    "statusincomplete": 1,
                    "description": "Receive a grade"
                }
            ]
        },
        "availability": "<i class=\"fa fa-lock\"></i> Available from <strong>3 Dec 2029</strong>"
    }
}}
<div class="activity-item {{#classlist}}{{.}} {{/classlist}}">
    {{#hasname}}
        <div class="activity-basis d-flex align-items-center">

            <div class="d-flex {{#namealt}}w-100{{/namealt}}{{^namealt}}mr-auto align-self-start{{/namealt}}">
                {{#cmname}} {{> core/inplace_editable }} {{/cmname}}
                {{{namealt}}}
                {{#hiddenfromstudents}}
                    <div class="ml-2 mb-1 align-self-end">
                        <span class="badge badge-pill badge-danger">{{{hiddenfromstudents}}}</span>
                    </div>
                {{/hiddenfromstudents}}
                {{#stealth}}
                    <div class="ml-2 mb-1 align-self-end">
                        <span class="badge badge-pill badge-warning align-self-end">{{{stealth}}}</span>
                    </div>
                {{/stealth}}
            </div>

            {{#activityinfo}}
                <div class="activity-info">
                    {{> core_course/activity_info}}
                </div>
            {{/activityinfo}}

            {{#controlmenu}}
                <div class="activity-actions">
                    {{#controlmenu}}
                        {{> core_courseformat/local/content/cm/controlmenu }}
                    {{/controlmenu}}
                </div>
            {{/controlmenu}}
        </div>
    {{/hasname}}

    <div class="description">
        {{#activityinfo}}
            {{#hasdates}}
            <div data-region="activity-dates" class="activity-dates small description-item">
                <div class="description-inner">
                    {{#activitydates}}
                        {{>core_course/activity_date}}
                    {{/activitydates}}
                </div>
            </div>
            {{/hasdates}}
        {{/activityinfo}}
        {{#altcontent}}
            <div class="activity-altcontent description-item small d-flex">
                <div class="flex-fill description-inner">
                    {{{altcontent}}}
                </div>
                {{^hasname}}
                    {{#controlmenu}}
                        <div class="activity-actions ml-auto">
                            {{#controlmenu}}
                                {{> core_courseformat/local/content/cm/controlmenu }}
                            {{/controlmenu}}
                        </div>
                    {{/controlmenu}}
                {{/hasname}}
            </div>
        {{/altcontent}}
        {{#modavailability}}
            {{> core_courseformat/local/content/cm/availability }}
        {{/modavailability}}
    </div>
</div>
