{{!
    @template core_course/section_format

    Displays a course section.

    No example given for now.
}}
<li id="section-{{num}}"
        class="section main main {{#onlysummary}} section-summary {{/onlysummary}} clearfix
              {{#ishidden}} hidden {{/ishidden}} {{#iscurrent}} current {{/iscurrent}}
              {{#isstealth}} orphaned {{/isstealth}}"
        role="region"
        aria-labelledby="sectionid-{{id}}-title"
        data-sectionid="{{num}}"
        data-sectionreturnid="{{sectionreturnid}}">
    {{#singleheader}} {{{singleheader}}} {{/singleheader}}
    <div class="left side">{{#iscurrent}} {{{currentlink}}} {{/iscurrent}}</div>
    <div class="right side">{{{controlmenu}}}</div>
    <div class="content">
        {{{header}}}
        {{{completioninfo}}}
        {{{availability}}}
        <div class="summary">{{{summary}}}</div>
        {{{activities}}}
        {{{cmlist}}}
        {{{cmcontrols}}}
    </div>
</li>
