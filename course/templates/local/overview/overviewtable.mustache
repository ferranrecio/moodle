<table class="generaltable cleartable boxaligncenter">
<caption class="accesshide">{{#str}}presetapplicationslisttable, tool_admin_presets{{/str}}</caption>
<thead>
    <tr>
        {{#headers}}
        <th class="{{textalign}}" scope="col" data-mdl-overview-column="{{key}}">{{name}}</th>
        {{/headers}}
    </tr>
</thead>
<tbody>
    {{#activities}}
    <tr data-mdl-overview-cmid="{{cmid}}">
        {{#overviews}}
        <td
            class="{{textalign}}"
            data-mdl-overview-item="{{overview}}"
            data-mdl-overview-value="{{value}}"
            {{#important}} data-mdl-overview-important="true" {{/important}}
        >
            {{{content}}}
        </td>
        {{/overviews}}
    </tr>
    {{/activities}}
</tbody>
</table>
