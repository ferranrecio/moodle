{{!
    @template core_course/local/course_format

    Displays the complete course format.

    Example context (json):
    {
        "initialsection": "<li>Section 0 contents</li>",
        "sections": [
            "<li>Section 1 contents</li>",
            "<li>Section 2 contents</li>"
        ],
        "format": "topics",
        "title": "Course title example",
        "hasnavigation": true,
        "sectionnavigation": "<div class=\"d-flex justify-content-between\"><div class=\"prevsection\">Previous</div><div class=\"nextsection\">Next</div></div>",
        "sectionselector": "<div class=\"d-flex justify-content-between\"><div class=\"prevsection\">Previous</div><div class=\"nextsection\">Next</div></div>",
        "singlesection": "<li>Single section contents</li>"
    }
}}
<h2 class="accesshide">{{{title}}}</h2>
{{{completionhelp}}}
<ul class="{{format}}">
    {{#initialsection}}
        {{> core_course/local/section_format }}
    {{/initialsection}}
    {{#sections}}
        {{> core_course/local/section_format }}
    {{/sections}}
</ul>
{{#hasnavigation}}
<div class="single-section">
    {{#sectionnavigation}} {{> core_course/local/course_format/sectionnavigation }} {{/sectionnavigation}}
    <ul class="{{format}}">
    {{#singlesection}}
        {{> core_course/local/section_format }}
    {{/singlesection}}
    </ul>
    {{#sectionselector}} {{> core_course/local/course_format/sectionselector }} {{/sectionselector}}
</div>
{{/hasnavigation}}
{{#numsections}} {{> core_course/local/course_format/addsection}} {{/numsections}}
