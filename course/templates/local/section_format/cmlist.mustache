{{!
    @template core_course/local/section_format/cmlist

    Displays the course module list inside a course section.

    Example context (json):
    {
        "cms": [
            {
                "modhtml": "<a class=\"aalink\">[icon] <span class=\"instancename\">Forum</span></a>"
            },
            {
                "modhtml": "<a class=\"aalink\">[icon] <span class=\"instancename\">Assignment</span></a>"
            }
        ],
        "hascms": true
    }
}}
{{#hascms}}
    <ul class="section img-text">
    {{#cms}}
        <li class="activity {{module}} modtype_{{module}} {{extraclasses}}" id="module-{{id}}">{{{modhtml}}}</li>
    {{/cms}}
    </ul>
{{/hascms}}
