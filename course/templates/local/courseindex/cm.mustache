{{!
    @template core_course/local/courseindex/cm

    Displays a course index course-module entry.

    Example context (json):
    {
        "name": "Announcements",
        "url": "#",
        "visible": 1,
        "isactive": 1
    }
}}
<li class="courseindex-item d-flex {{#isactive}}active{{/isactive}} {{^visible}}dimmed{{/visible}}"
    id="{{uniqid}}-course-index-cm-{{id}}"
    data-for="cm"
    data-id="{{id}}"
>
    <a class="courseindex-link text-truncate" href="{{{url}}}" data-for="cm_name">
        {{{name}}}
    </a>
</li>
{{#js}}
require(['core_course/local/courseindex/cm'], function(component) {
    component.init('{{uniqid}}-course-index-cm-{{id}}');
});
{{/js}}
