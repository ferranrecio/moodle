{{!
    @template core/local/modal/radiobody

    Moodle modal body for radio selection.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * title A cleaned string (use clean_text()) to display.
    * body HTML content for the boday

    Example context (json):
    {
        "options": [
            {
                "optionid": "option1",
                "value": "value1",
                "name": "First option",
                "description": "First option description",
                "first": true,
                "selected": true
            },
            {
                "optionid": "option2",
                "value": "value2",
                "name": "Second option",
                "description": "Second option description",
                "icon": "<img class='icon' src='http://urltooptionicon'>"
            },
            {
                "optionid": "option3",
                "value": "value3",
                "name": "Third option",
                "description": "Third option description",
                "icon": "<img class='icon' src='http://urltooptionicon'>",
                "disabled": true
            }
        ]
    }
}}
<div class="d-flex flex-column">
    <form>
        {{#options}}
        <div
            class="d-flex flex-row align-items-start py-2 {{!
                }} {{^first}} border-top {{/first}}  {{!
                }} {{#disabled}} dimmed_text {{/disabled}}"
        >
            {{#icon}}
            <div class="icon-box mx-2">
                {{{icon}}}
            </div>
            {{/icon}}
            <input
                class="mt-2 mx-2"
                type="radio"
                id="{{optionid}}"
                name="option"
                value="{{value}}"
                {{#description}} aria-describedby="showRadio_help_{{optionid}}" {{/description}}
                {{#selected}} checked="checked" {{/selected}}
                {{#disabled}} disabled {{/disabled}}
            >
            <div class="w-100">
                <label
                    class="{{^icon}} mt-1 {{/icon}} {{^description}} mt-1 {{/description}} mb-1"
                    for="{{optionid}}"
                >
                    {{name}}
                </label>
                {{#description}}
                <div id="showRadio_help_{{optionid}}" class="small text-muted">
                    {{{description}}}
                </div>
                {{/description}}
            </div>
        </div>
        {{/options}}
    </form>
</div>
