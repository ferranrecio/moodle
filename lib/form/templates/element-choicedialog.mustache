{{!
    @template core_form/element-choicedialog

    Choice dialog form element template.

    Context variables required for this template:
    * id - Element id,
    * nameraw - Raw Element name without '[]'
    * name - Element name,
    * label -  Element label,
    * multiple - multi select?,
    * checked - checked?,
    * error - Is there an error associated with this element?,
    * size - Element size,
    * value - Element value,
    * helpbutton - Helpbutton,
    * hiddenlabel - Element hidden flag,
    * frozen - Element frozen flag,
    * hardfrozen - Element hard fronzen flag,
    * extraclasses - Extra classes assocaited,
    * type - Element type,
    * attributes - Element attributes,
    * options - [
        {
            text - Option text,
            value - Option value,
            selected - Selected?,
            disabled - Disabled?,
            optionattributes - Option attributes
        }
    ]

    Example context (json):
    {
        "element": {
            "id": "id_maildisplay",
            "nameraw": "maildisplay",
            "name": "maildisplay",
            "label": null,
            "multiple": null,
            "checked": null,
            "error": null,
            "size": null,
            "value": null,
            "helpbutton": "",
            "hiddenlabel": false,
            "frozen": false,
            "hardfrozen": false,
            "extraclasses": null,
            "type": "select",
            "attributes": "",
            "fieldicon": "<a class='btn'><i class='icon fa fa-ellipsis-h'></i></a>",
            "options": [
                {
                    "rawoptionid": "1",
                    "text": "Hidden",
                    "value": 0,
                    "selected": false,
                    "disabled": false,
                    "optionattributes": ""
                },
                {
                    "rawoptionid": "2",
                    "text": "Visible to everyone",
                    "value": 1,
                    "selected": true,
                    "disabled": false,
                    "optionattributes": ""
                },
                {
                    "rawoptionid": "3",
                    "text": "Allow only other course members to see my email address",
                    "value": 2,
                    "selected": false,
                    "disabled": false,
                    "optionattributes": ""
                }
            ]
        }
    }
}}
{{< core_form/element-template }}
    {{$element}}
        {{^element.frozen}}
        <select
            class="custom-select {{#error}}is-invalid{{/error}} d-none"
            name="{{element.name}}"
            id="{{element.id}}"
            {{#element.multiple}}multiple{{/element.multiple}}
            {{#element.size}}size="{{element.size}}"{{/element.size}}
            {{#error}} autofocus aria-describedby="{{element.iderror}}" {{/error}}
            {{#element.fieldicon}} data-fieldicon="{{element.fieldicon}}" {{/element.fieldicon}}
            {{{element.attributes}}}
        >
            {{#element.options}}
            <option
                value="{{value}}"
                data-optionid="{{element.id}}_{{rawoptionid}}"
                {{#selected}}selected{{/selected}}
                {{#disabled}}disabled{{/disabled}}
                {{#description}} data-description="{{description}}" {{/description}}
                {{#icon}} data-icon="{{icon}}" {{/icon}}
                {{{optionattributes}}}
            >
                {{{text}}}
            </option>
            {{/element.options}}
        </select>
        <button
            class="form-control text-left {{!
                }} {{#error}}is-invalid{{/error}}"
            id="{{element.id}}_preview"
            aria-haspopup="dialog"
        >
            {{! The icon and selected preview will be updated once JS is fully loaded. }}
            <span data-for="choicedialog-icon"><span class="icon">{{> core/loading }}</span></span>
            <span class="w-100"data-for="choicedialog-selected">{{element.selectedtext}}</span>
        </button>
        {{/element.frozen}}
        {{#element.frozen}}
            {{#element.options}}
                {{#selected}}
                    {{{text}}}
                    {{^element.hardfrozen}}
                    <input
                        type="hidden"
                        name="{{element.name}}"
                        value="{{value}}"
                        id="{{element.id}}"
                    >
                    {{/element.hardfrozen}}
                {{/selected}}
            {{/element.options}}
        {{/element.frozen}}
    {{/element}}
{{/ core_form/element-template }}
{{^element.frozen}}
{{#js}}
require(['core_form/choicedialog'], function(ChioceDialog) {
    ChioceDialog.init('{{element.id}}');
});
{{/js}}
{{/element.frozen}}
